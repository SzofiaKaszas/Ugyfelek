		<Button Width="200" Height="30" Grid.Row="0" HorizontalAlignment="Left" Content="Uj megrendeles" Click="UjRendeles_Click"/>
		<DataGrid x:Name="ugyfelek" AutoGenerateColumns="True" Grid.Row="1"></DataGrid>
    </Grid>
</Window>
